<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner_item"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/w_273"
            android:layout_height="@dimen/h_273"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:duplicateParentState="true">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_song_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/shape_button_selector"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:scaleType="fitXY" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_6"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/w_22" />
    </LinearLayout>

</FrameLayout>